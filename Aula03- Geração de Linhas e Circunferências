    "# Definição da Classe para Primitiva de Circunferência"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "class Circle(object):\n",
    "    # construtor da classe\n",
    "    def __init__(self, xc, yc, raio, color, color_p,resp=0, mat= [[0,0],[0,0]],resp2=0):\n",
    "        self.xc = xc       # coordenada x do centro\n",
    "        self.yc = yc       # coordenada y do centro\n",
    "        self.raio = raio   # raio da circunferência\n",
    "        self.color = color # cor do objeto\n",
    "        self.color_p = color_p\n",
    "        self.mat = mat\n",
    "        self.resp = resp\n",
    "        self.resp2 = resp2\n",
    "\n",
    "    \n",
    "    # renderiza a circunferência desejada na tela\n",
    "    # Algoritmo de Bresenham\n",
    "    def draw(self, screen):    \n",
    "            \n",
    "        # Definição e Inicialização de Variáveis locais      \n",
    "        # Coniderando a circunferência ao redor da origem, mas renderizada transladada\n",
    "        x = 0                # x inicial\n",
    "        y = self.raio        # y inicial\n",
    "        d = 1 - self.raio    # d de teste inicial\n",
    "        contador = 0\n",
    "        \n",
    "        # Desenha os pontos iniciais de cada quadrante\n",
    "        if self.resp == 1 and self.resp2 == 0:\n",
    "            self.desenhaPreenchido(x, y, screen)\n",
    "        elif self.resp == 1 and self.resp2 == 1:\n",
    "            self.desenhaPreenchidoT(x, y, contador, screen)\n",
    "        else:\n",
    "            self.drawCirclePoints(x, y, screen)\n",
    "            \n",
    "            \n",
    "        # Desenha os pontos iniciais de cada quadrante\n",
    "        #self.drawCirclePoints(x, y, screen)\n",
    "\n",
    "        \n",
    "        if self.resp2 == 1:\n",
    "            nlinhas = len(mat)\n",
    "        \n",
    "            \n",
    "        contador = 1\n",
    "        \n",
    "        # Gera os novos pontos e os renderiza\n",
    "        while x < y:\n",
    "            \n",
    "            if self.resp2 == 1:\n",
    "                 if contador > (nlinhas-1):\n",
    "                    contador = 0 \n",
    "            \n",
    "            if d < 0:   # Direção E\n",
    "                d = d + 2 * x + 3\n",
    "            else:       # Direção SE\n",
    "                d = d + 2 * (x - y) + 5\n",
    "                y = y - 1\n",
    "            \n",
    "            x = x + 1\n",
    "\n",
    "            if self.resp == 1 and self.resp2 == 0:\n",
    "                self.desenhaPreenchido(x, y, screen)\n",
    "            elif self.resp == 1 and self.resp2 == 1:\n",
    "                self.desenhaPreenchidoT(x, y, contador, screen)\n",
    "            else:\n",
    "                self.drawCirclePoints(x, y, screen)\n",
    "                \n",
    "            contador += 1\n",
    "\n",
    "        \n",
    "            \n",
    "    def drawCirclePoints(self, x, y, screen):\n",
    "        #desenhar os pontos nos outros quadrantes\n",
    "        \n",
    "        xCentro = self.xc\n",
    "        yCentro = self.yc\n",
    "    \n",
    "        screen.setPixel(xCentro + x, yCentro + y, self.color)\n",
    " \n",
    "        screen.setPixel(xCentro + y, yCentro + x, self.color)\n",
    "    \n",
    "        screen.setPixel(xCentro + y, yCentro - x, self.color)\n",
    "        \n",
    "        screen.setPixel(xCentro + x, yCentro - y, self.color)\n",
    "        \n",
    "        screen.setPixel(xCentro - x, yCentro - y, self.color)\n",
    "        \n",
    "        screen.setPixel(xCentro - y, yCentro - x, self.color)\n",
    "        \n",
    "        screen.setPixel(xCentro - y, yCentro + x, self.color)\n",
    "    \n",
    "        screen.setPixel(xCentro - x, yCentro + y, self.color)\n",
    "        \n",
    "   \n",
    "                   \n",
    "    def desenhaPreenchido(self,x,y,screen):\n",
    "         #desenhar os pontos nos outros quadrantes\n",
    "        \n",
    "        xCentro = self.xc\n",
    "        yCentro = self.yc\n",
    "                \n",
    "        # desenhando linhas horizontais (limite esquerdo ao direito)\n",
    "        \n",
    "        line3 = Line(xCentro - x, yCentro + y, xCentro + x, yCentro + y, self.color_p)\n",
    "        line3.draw(screen)\n",
    "        screen.setPixel(xCentro - x, yCentro + y, self.color)\n",
    "        screen.setPixel(xCentro + x, yCentro + y, self.color)\n",
    "        \n",
    "        line4 = Line(xCentro - y, yCentro + x, xCentro + y, yCentro + x, self.color_p)\n",
    "        line4.draw(screen)\n",
    "        screen.setPixel(xCentro - y, yCentro + x, self.color)\n",
    "        screen.setPixel(xCentro + y, yCentro + x, self.color)\n",
    "       \n",
    "        line5 = Line(xCentro - y, yCentro - x, xCentro + y, yCentro - x, self.color_p)\n",
    "        line5.draw(screen)\n",
    "        screen.setPixel(xCentro - y, yCentro - x, self.color)\n",
    "        screen.setPixel(xCentro + y, yCentro - x, self.color)\n",
    "\n",
    "        line6 = Line(xCentro - x, yCentro - y, xCentro + x, yCentro - y, self.color_p)\n",
    "        line6.draw(screen)\n",
    "        screen.setPixel(xCentro - x, yCentro - y, self.color) \n",
    "        screen.setPixel(xCentro + x, yCentro - y, self.color)\n",
    "        \n",
    "            \n",
    "    def desenhaPreenchidoT(self,x,y,contador,screen):\n",
    "         #desenhar os pontos nos outros quadrantes\n",
    "        \n",
    "        xCentro = self.xc\n",
    "        yCentro = self.yc\n",
    "        \n",
    "        vetor = mat[contador]\n",
    "                \n",
    "        # desenhando linhas horizontais (limite esquerdo ao direito)\n",
    "        \n",
    "        \n",
    "        line3 = Line(xCentro - x, yCentro + y, xCentro + x, yCentro + y, self.color_p,vetor,1)\n",
    "        line3.draw(screen)\n",
    "    \n",
    "        screen.setPixel(xCentro - x, yCentro + y, self.color)\n",
    "        screen.setPixel(xCentro + x, yCentro + y, self.color)\n",
    "    \n",
    "\n",
    "        line4 = Line(xCentro - y, yCentro + x, xCentro + y , yCentro + x, self.color_p,vetor,1)\n",
    "        line4.draw(screen)\n",
    "        \n",
    "            \n",
    "        screen.setPixel(xCentro - y, yCentro + x, self.color)\n",
    "        screen.setPixel(xCentro + y, yCentro + x, self.color)\n",
    "\n",
    "        \n",
    "        line5 = Line(xCentro - y, yCentro - x, xCentro + y, yCentro - x, self.color_p,vetor,1)\n",
    "        line5.draw(screen)\n",
    "                 \n",
    "        screen.setPixel(xCentro - y, yCentro  - x, self.color)\n",
    "        screen.setPixel(xCentro + y, yCentro - x, self.color)\n",
    "\n",
    "\n",
    "        line6 = Line(xCentro - x, yCentro - y, xCentro + x, yCentro - y, self.color_p,vetor,1)\n",
    "        line6.draw(screen)\n",
    "    \n",
    "        screen.setPixel(xCentro - x, yCentro - y, self.color) \n",
    "        screen.setPixel(xCentro + x, yCentro - y, self.color)\n",
    "        \n",
    "    \n",
    "\n",
    "    "
   ]
