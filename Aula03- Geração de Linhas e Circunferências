    "# Lembre-se de carregar novamente a tela\n",
    "# Criação do Objeto de Tela\n",
    "screen = Screen(\"Tela\", pygame.Color(255, 255, 255, 255), 700, 700)\n",
    "\n",
    "#Antepenúltimo parâmetro: preenchido ou não?\n",
    "#1 para preenchido\n",
    "#0 para não preenchido\n",
    "\n",
    "#Último parâmetro: comum ou diferentes estilos? Obs: se tiver diferentes estilos informar a matriz em seguida\n",
    "#1 para diferentes estilos\n",
    "#0 para comum\n",
    "\n",
    "mat= [[1,1,1,0], [0,1,1,1]]\n",
